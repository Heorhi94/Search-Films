<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Movie Search" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="Enter movie name:" VerticalAlignment="Center" Margin="0 0 10 0" />
            <TextBox x:Name="SearchTextBox" Width="200" VerticalAlignment="Center" />
            <Button x:Name="SearchButton" Content="Search" Click="SearchButton_Click" Margin="10 0 0 0" />
        </StackPanel>
        <ListBox x:Name="ResultsListBox" Grid.Row="1" Margin="10" />
    </Grid>
</Window>